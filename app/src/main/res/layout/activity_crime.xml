<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CrimeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_weight="10"
        android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TITLE"
                android:layout_marginTop="25dp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/crime_title"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:inputType="text"
                android:imeOptions="actionSend"
                android:text="Enter a title for the exercise."/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DETAILS"
                android:layout_marginTop="10dp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/crime_details"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:inputType="text"
                android:imeOptions="actionSend"
                android:text="Enter a details for the exercise."/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="DATE:"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="RECORD:"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/crime_date"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:inputType="date"
                    android:onClick="changeDate"
                    android:text="YYYY-MM-DD" />

                <TextView
                    android:id="@+id/crime_time"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:onClick="changeTime"
                    android:inputType="date"
                    android:text="HH:MM:SS" />

                <EditText
                    android:id="@+id/record_entry_1"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:text="" />

                <EditText
                    android:id="@+id/record_entry_2"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:text="" />

                <EditText
                    android:id="@+id/record_entry_3"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:text="" />

            </LinearLayout>

            <Button
                android:id="@+id/add_record"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="addRecord"
                android:text="ADD RECORD" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="RECORDS:"
                android:layout_marginTop="10dp"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/record_1_info"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="HERE will be your records"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:layout_width="1dp"/>

                <TextView
                    android:id="@+id/record_1_date"
                    android:layout_weight="4"
                    android:layout_height="wrap_content"
                    android:text="DATE"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:layout_width="1dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/record_2_info"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="HERE will be your records, up to 5!"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:layout_width="1dp"/>

                <TextView
                    android:id="@+id/record_2_date"
                    android:layout_weight="4"
                    android:layout_height="wrap_content"
                    android:text="DATE"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:layout_width="1dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/record_3_info"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="HERE will be your records, up to 5!"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:layout_width="1dp"/>

                <TextView
                    android:id="@+id/record_3_date"
                    android:layout_weight="4"
                    android:layout_height="wrap_content"
                    android:text="DATE"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:layout_width="1dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/record_4_info"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="HERE will be your records, up to 5!"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:layout_width="1dp"/>

                <TextView
                    android:id="@+id/record_4_date"
                    android:layout_weight="4"
                    android:layout_height="wrap_content"
                    android:text="DATE"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:layout_width="1dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/record_5_info"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="HERE will be your records, up to 5!"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:layout_width="1dp"/>

                <TextView
                    android:id="@+id/record_5_date"
                    android:layout_weight="4"
                    android:layout_height="wrap_content"
                    android:text="DATE"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:layout_width="1dp"/>

            </LinearLayout>

<!--            <CheckBox android:id="@+id/crime_solvate"-->
<!--                            android:layout_width="wrap_content"-->
<!--                            android:layout_height="wrap_content"-->
<!--                            android:textStyle="bold"-->
<!--                            android:text="Is Solved?" />-->

            <Button
                android:id="@+id/delete_crime_button"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"
                android:text="DELETE EXERCISE"
                android:onClick="DeleteCrime"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/crime_first"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="50dp"
                    android:onClick="firstCrime"
                    android:text="FIRST TASK" />

                <Button
                    android:id="@+id/crime_last"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="5dp"
                    android:layout_height="50dp"
                    android:onClick="lastCrime"
                    android:text="LAST TASK" />

            </LinearLayout>

        </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>